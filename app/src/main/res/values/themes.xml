    <style name="Theme.TeamChat" parent="Base.Theme.TeamChat" />

    <!--    Screen background if light mode on-->
    <style name="SCREEN">
        <item name="android:background">@drawable/img_1</item>
    </style>
    <style name="BACKGROUND">
        <item name="android:background">@color/white</item>
    </style>
